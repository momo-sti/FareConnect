<h2>計算結果</h2>

<h5 id="gasoline-cost">ガソリン代金 <span class="result"><%= @result %></span>円</h5>
<p id="total-distance-result">距離: <span class="detail"><%= @total_distance %></span>km</p>
<p id="fuel-efficiency-result">燃費: <span class="detail"><%= @fuel_efficiency %></span>L/km</p>
<p id="price-per-liter-result">ガソリン単価: <span class="detail"><%= @price_per_liter %></span>L/円</p>

<h5 id="highway-cost">高速料金: <span class="result"><%= @highway_cost %></span>円</h5>
<p id="start-place-result">出発IC: <span class="detail"><%= @start_place %></span></p>
<p id="arrive-place-result">到着IC: <span class="detail"><%= @arrive_place %></span></p>

<% @extras.each_with_index do |extra, index| %>
  <div>
    <h5>カテゴリ: <%= extra["category"] %></h5>
    <h5>金額: <%= extra["amount"] %>円</h5>
    <%= link_to '編集', edit_extra_path(index), data: { turbo_action: 'replace' } %>
    <%= link_to '削除', extra_path(index), data: { turbo_method: 'DELETE', confirm: '削除しますか？' } %>

  </div>
<% end %>

<%= turbo_frame_tag 'new_extra' do %>
  <%= render 'extras/form', extra: Extra.new %>
<% end %>
